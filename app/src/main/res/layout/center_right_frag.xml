<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </VideoView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <Button
            android:background="@drawable/back_button"
            android:id="@+id/back_button"
            android:layout_width="@dimen/button_length"
            android:layout_height="@dimen/button_length"
            android:layout_gravity="top|left"
            android:layout_margin="10dp"></Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:textSize="@dimen/text_big_size"
                android:text="作品示例">
            </TextView>

            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textSize="@dimen/text_middle_size"
                android:text="2012-1-29"
                android:layout_marginTop="5dp">
            </TextView>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="40dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/play_img"
                android:src="@drawable/play"
                android:layout_width="@dimen/text_middle_size"
                android:layout_height="@dimen/text_middle_size">
            </ImageView>

            <TextView
                android:id="@+id/play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/play_img"
                android:textSize="@dimen/text_small_size"
                android:text="100万"
                android:layout_marginLeft="5dp"></TextView>

            <ImageView
                android:id="@+id/like_img"
                android:src="@drawable/like"
                android:layout_alignLeft="@id/play_img"
                android:layout_below="@id/play_img"
                android:layout_width="@dimen/text_middle_size"
                android:layout_height="@dimen/text_middle_size">
            </ImageView>

            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/play_img"
                android:layout_below="@id/play_num"
                android:textSize="@dimen/text_small_size"
                android:text="10万"
                android:layout_marginLeft="5dp"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/comment_img"
                android:src="@drawable/comment"
                android:layout_width="@dimen/text_middle_size"
                android:layout_height="@dimen/text_middle_size">
            </ImageView>

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/comment_img"
                android:textSize="@dimen/text_small_size"
                android:text="50万"
                android:layout_marginLeft="5dp"></TextView>

            <ImageView
                android:id="@+id/share_img"
                android:src="@drawable/like"
                android:layout_alignLeft="@id/comment_img"
                android:layout_below="@id/comment_img"
                android:layout_width="@dimen/text_middle_size"
                android:layout_height="@dimen/text_middle_size">
            </ImageView>

            <TextView
                android:id="@+id/share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/comment_img"
                android:layout_below="@id/comment_num"
                android:textSize="@dimen/text_small_size"
                android:text="105万"
                android:layout_marginLeft="5dp"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/download_img"
                android:src="@drawable/download"
                android:layout_width="@dimen/text_middle_size"
                android:layout_height="@dimen/text_middle_size">
            </ImageView>

            <TextView
                android:id="@+id/download_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/download_img"
                android:textSize="@dimen/text_small_size"
                android:text="1万"
                android:layout_marginLeft="5dp"></TextView>

            <ImageView
                android:id="@+id/transmit_img"
                android:src="@drawable/transmit"
                android:layout_alignLeft="@id/download_img"
                android:layout_below="@id/download_img"
                android:layout_width="@dimen/text_middle_size"
                android:layout_height="@dimen/text_middle_size">
            </ImageView>

            <TextView
                android:id="@+id/transmit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/download_img"
                android:layout_below="@id/download_num"
                android:textSize="@dimen/text_small_size"
                android:text="10万"
                android:layout_marginLeft="5dp"></TextView>

        </RelativeLayout>

    </LinearLayout>



</FrameLayout>